/* components/h-audio/h-audio.wxss */
.h-audio {
  display: flex;
  align-items: center;
  width: 100%;
  height: 104rpx;
  padding: 40rpx 40rpx 0 32rpx;
  box-sizing: border-box;
  background-image: linear-gradient(rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
}

.audio__btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio__slider {
  display: block;
  flex: 1;
  margin: 0;
  margin-left: 20rpx;
}
