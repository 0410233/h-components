/* h-components/h-alert/h-alert.wxss */

.h-alert {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 562rpx;
  min-height: 0;
  padding: 32rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #ffffff;
}

.h-alert__buttons {
  display: flex;
  justify-content: center;
  margin-top: 54rpx;
}

.h-alert__ok {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 154rpx;
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  background: #87CEF6;
  color: #ffffff;
}
