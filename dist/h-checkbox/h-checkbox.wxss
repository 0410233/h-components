/* h-components/h-checkbox/h-checkbox.wxss */
.h-checkbox {
  display: flex;
  align-items: center;
}

.h-checkbox--icon-right {
  flex-direction: row-reverse;
}

.h-checkbox--icon-top {
  flex-direction: column;
}

.h-checkbox--icon-bottom {
  flex-direction: column-reverse;
}

.h-checkbox__icon {
  width: 28rpx;
  height: 28rpx;
}

.h-checkbox__image {
  display: block;
  width: 100%;
  height: 100%;
}

.h-checkbox__label {
  font-size: 28rpx;
}
