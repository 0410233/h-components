/* h-components/h-sorter/h-sorter.wxss */
.h-sorter {
  display: flex;
  align-items: center;
}

.h-sorter__label {
  font-size: 28rpx;
}

.h-sorter__indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 6rpx;
  width: 20rpx;
}

.h-sorter__asc, .h-sorter__desc {
  width: 16rpx;
  height: 8rpx;
  background: center / contain no-repeat;
}

.h-sorter__asc.is-active, .h-sorter__desc.is-active {
  width: 18rpx;
  height: 10rpx;
}

.h-sorter__asc {
  background-image: url("data:image/png;base64,");
}

.h-sorter__asc.is-active {
  background-image: url("data:image/png;base64,");
}

.h-sorter__desc {
  margin-top: 4rpx;
  background-image: url("data:image/png;base64,");
}

.h-sorter__desc.is-active {
  background-image: url("data:image/png;base64,");
}
