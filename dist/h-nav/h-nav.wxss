/* components/h-nav/h-nav.wxss */
.h-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.h-nav__bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.h-nav__content,
.h-nav__left,
.h-nav__center {
  display: flex;
  align-items: center;
}

.h-nav__content{
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  z-index: 2;
}

.h-nav__left {
  flex: 0 0 30%;
}

.h-nav__center {
  flex: 0 0 40%;
  justify-content: center;
}

.h-nav__title {
  font-size: 35rpx;
  color: #333333;
}

.h-nav__border-bottom {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  height: 1rpx;
  background: rgba(0,0,0,.10);
}
