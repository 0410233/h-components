<!--h-components/h-radio/h-radio.wxml-->
<view class="h-radio h-radio--icon-{{ iconPosition }}" style="{{ style }}" bindtap="onTap">
  <view class="h-radio__icon" style="{{ iconStyle }}">
    <image wx:if="{{ isChecked }}" src="{{ checkedIcon }}" mode="aspectFit"
    class="h-radio__image"></image>
    <image wx:else src="{{ uncheckedIcon }}" mode="aspectFit"
      class="h-radio__image"></image>
  </view>
  <view class="h-radio__label" style="{{ labelStyle }}"><slot></slot></view>
</view>
