/* h-components/h-popup/h-popup.wxss */
.h-popup {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1100;
}

.h-popup.is-hidden {
  display: none !important;
}
